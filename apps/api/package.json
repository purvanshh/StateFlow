{
  "name": "@stateflow/api",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "worker": "tsx src/workers/worker.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "stateflow": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "bin": {
    "stateflow": "src/cli.ts"
  },
  "dependencies": {
    "@stateflow/db": "workspace:*",
    "@stateflow/shared": "workspace:*",
    "@stateflow/workflows": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1"
  }
}
